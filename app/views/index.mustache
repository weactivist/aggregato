{{>header}}
    <div class="container my-4">
        <div class="row">
            {{#items}}
                <div class="col-md-6 col-lg-4 p-3">
                    <div class="card">
                        <div class="card-body col p-0">
                            <h4 class="card-title p-3 m-0">{{title}}</h4>
                            <img src="https://placehold.it/250x200" alt="{{title}}" class="card-img-top rounded-0" />
                            <p class="card-text px-3 pt-3 m-0">{{summary}}</p>
                            <a href="{{link}}" target="_blank" class="btn btn-link btn-sm p-3">Continue reading</a>
                        </div>
                    </div>
                </div>
            {{/items}}
        </div>
    </div>
{{>footer}}
